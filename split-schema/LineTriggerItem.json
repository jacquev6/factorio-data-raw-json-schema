{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/LineTriggerItem.html",
  "allOf": [
    {
      "$ref": "../split-schema/TriggerItem.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "line"
        },
        "range": {
          "$ref": "../split-schema/double.json"
        },
        "width": {
          "$ref": "../split-schema/double.json"
        },
        "range_effects": {
          "$ref": "../split-schema/TriggerEffect.json"
        }
      },
      "required": [
        "type",
        "range",
        "width"
      ]
    }
  ]
}