{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/ClusterTriggerItem.html",
  "allOf": [
    {
      "$ref": "../split-schema/TriggerItem.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "cluster"
        },
        "cluster_count": {
          "$ref": "../split-schema/uint32.json"
        },
        "distance": {
          "$ref": "../split-schema/float.json"
        },
        "distance_deviation": {
          "$ref": "../split-schema/float.json"
        }
      },
      "required": [
        "type",
        "cluster_count",
        "distance"
      ]
    }
  ]
}