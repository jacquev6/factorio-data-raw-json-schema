{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/PodMovementProcessionLayer.html",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "pod-movement"
    },
    "reference_group": {
      "$ref": "../split-schema/ProcessionLayerInheritanceGroupID.json"
    },
    "inherit_from": {
      "$ref": "../split-schema/ProcessionLayerInheritanceGroupID.json"
    },
    "contribute_to_distance_traveled": {
      "$ref": "../split-schema/bool.json"
    },
    "distance_traveled_contribution": {
      "$ref": "../split-schema/float.json"
    },
    "frames": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "timestamp": {
                "$ref": "../split-schema/MapTick.json"
              },
              "tilt": {
                "$ref": "../split-schema/double.json"
              },
              "tilt_t": {
                "$ref": "../split-schema/double.json"
              },
              "offset": {
                "$ref": "../split-schema/Vector.json"
              },
              "offset_t": {
                "$ref": "../split-schema/Vector.json"
              },
              "offset_rate": {
                "$ref": "../split-schema/double.json"
              },
              "offset_rate_t": {
                "$ref": "../split-schema/double.json"
              }
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    }
  },
  "required": [
    "type",
    "frames"
  ]
}