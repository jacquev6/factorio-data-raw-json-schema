{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/prototypes/NamedNoiseFunction.html",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "noise-function"
    },
    "name": {
      "$ref": "../split-schema/string.json"
    },
    "order": {
      "$ref": "../split-schema/Order.json"
    },
    "localised_name": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "localised_description": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "factoriopedia_description": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "subgroup": {
      "$ref": "../split-schema/ItemSubGroupID.json"
    },
    "hidden": {
      "$ref": "../split-schema/bool.json"
    },
    "hidden_in_factoriopedia": {
      "$ref": "../split-schema/bool.json"
    },
    "parameter": {
      "$ref": "../split-schema/bool.json"
    },
    "factoriopedia_simulation": {
      "$ref": "../split-schema/SimulationDefinition.json"
    },
    "factoriopedia_alternative": {
      "$ref": "../split-schema/string.json"
    },
    "parameters": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/string.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "expression": {
      "$ref": "../split-schema/NoiseExpression.json"
    },
    "local_expressions": {
      "type": "object",
      "additionalProperties": {
        "$ref": "../split-schema/NoiseExpression.json"
      },
      "propertyNames": {
        "$ref": "../split-schema/string.json"
      }
    },
    "local_functions": {
      "type": "object",
      "additionalProperties": {
        "$ref": "../split-schema/NoiseFunction.json"
      },
      "propertyNames": {
        "$ref": "../split-schema/string.json"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "type",
    "name",
    "parameters",
    "expression"
  ]
}