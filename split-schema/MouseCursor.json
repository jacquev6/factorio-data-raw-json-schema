{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/prototypes/MouseCursor.html",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "mouse-cursor"
    },
    "name": {
      "$ref": "../split-schema/string.json"
    },
    "system_cursor": {
      "anyOf": [
        {
          "type": "string",
          "const": "arrow"
        },
        {
          "type": "string",
          "const": "i-beam"
        },
        {
          "type": "string",
          "const": "crosshair"
        },
        {
          "type": "string",
          "const": "wait-arrow"
        },
        {
          "type": "string",
          "const": "size-all"
        },
        {
          "type": "string",
          "const": "no"
        },
        {
          "type": "string",
          "const": "hand"
        }
      ]
    },
    "filename": {
      "$ref": "../split-schema/FileName.json"
    },
    "hot_pixel_x": {
      "$ref": "../split-schema/int16.json"
    },
    "hot_pixel_y": {
      "$ref": "../split-schema/int16.json"
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "type"
  ]
}