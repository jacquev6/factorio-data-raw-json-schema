{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/prototypes/TipsAndTricksItem.html",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "tips-and-tricks-item"
    },
    "name": {
      "$ref": "../split-schema/string.json"
    },
    "order": {
      "$ref": "../split-schema/Order.json"
    },
    "localised_name": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "localised_description": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "factoriopedia_description": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "subgroup": {
      "$ref": "../split-schema/ItemSubGroupID.json"
    },
    "hidden": {
      "$ref": "../split-schema/bool.json"
    },
    "hidden_in_factoriopedia": {
      "$ref": "../split-schema/bool.json"
    },
    "parameter": {
      "$ref": "../split-schema/bool.json"
    },
    "factoriopedia_simulation": {
      "$ref": "../split-schema/SimulationDefinition.json"
    },
    "image": {
      "$ref": "../split-schema/FileName.json"
    },
    "simulation": {
      "$ref": "../split-schema/SimulationDefinition.json"
    },
    "tag": {
      "$ref": "../split-schema/string.json"
    },
    "category": {
      "$ref": "../split-schema/string.json"
    },
    "indent": {
      "$ref": "../split-schema/uint8.json"
    },
    "is_title": {
      "$ref": "../split-schema/bool.json"
    },
    "trigger": {
      "$ref": "../split-schema/TipTrigger.json"
    },
    "skip_trigger": {
      "$ref": "../split-schema/TipTrigger.json"
    },
    "tutorial": {
      "$ref": "../split-schema/string.json"
    },
    "starting_status": {
      "$ref": "../split-schema/TipStatus.json"
    },
    "dependencies": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/string.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "player_input_method_filter": {
      "$ref": "../split-schema/PlayerInputMethodFilter.json"
    },
    "icons": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/IconData.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "icon": {
      "$ref": "../split-schema/FileName.json"
    },
    "icon_size": {
      "$ref": "../split-schema/SpriteSizeType.json"
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "type"
  ]
}