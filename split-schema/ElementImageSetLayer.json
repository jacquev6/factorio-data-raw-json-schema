{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/ElementImageSetLayer.html",
  "anyOf": [
    {
      "type": "object",
      "properties": {
        "draw_type": {
          "anyOf": [
            {
              "type": "string",
              "const": "inner"
            },
            {
              "type": "string",
              "const": "outer"
            }
          ]
        },
        "type": {
          "anyOf": [
            {
              "type": "string",
              "const": "none"
            },
            {
              "type": "string",
              "const": "composition"
            }
          ]
        },
        "tint": {
          "$ref": "../split-schema/Color.json"
        },
        "center": {
          "$ref": "../split-schema/Sprite.json"
        },
        "left": {
          "$ref": "../split-schema/Sprite.json"
        },
        "left_top": {
          "$ref": "../split-schema/Sprite.json"
        },
        "left_bottom": {
          "$ref": "../split-schema/Sprite.json"
        },
        "right": {
          "$ref": "../split-schema/Sprite.json"
        },
        "right_top": {
          "$ref": "../split-schema/Sprite.json"
        },
        "right_bottom": {
          "$ref": "../split-schema/Sprite.json"
        },
        "top": {
          "$ref": "../split-schema/Sprite.json"
        },
        "bottom": {
          "$ref": "../split-schema/Sprite.json"
        },
        "corner_size": {
          "anyOf": [
            {
              "$ref": "../split-schema/uint16.json"
            },
            {
              "type": "array",
              "items": [
                {
                  "$ref": "../split-schema/uint16.json"
                },
                {
                  "$ref": "../split-schema/uint16.json"
                }
              ],
              "minItems": 2,
              "maxItems": 2
            }
          ]
        },
        "filename": {
          "$ref": "../split-schema/FileName.json"
        },
        "position": {
          "$ref": "../split-schema/MapPosition.json"
        },
        "load_in_minimal_mode": {
          "$ref": "../split-schema/bool.json"
        },
        "top_width": {
          "$ref": "../split-schema/SpriteSizeType.json"
        },
        "bottom_width": {
          "$ref": "../split-schema/SpriteSizeType.json"
        },
        "left_height": {
          "$ref": "../split-schema/SpriteSizeType.json"
        },
        "right_height": {
          "$ref": "../split-schema/SpriteSizeType.json"
        },
        "center_width": {
          "$ref": "../split-schema/SpriteSizeType.json"
        },
        "center_height": {
          "$ref": "../split-schema/SpriteSizeType.json"
        },
        "scale": {
          "$ref": "../split-schema/double.json"
        },
        "top_border": {
          "$ref": "../split-schema/int32.json"
        },
        "right_border": {
          "$ref": "../split-schema/int32.json"
        },
        "bottom_border": {
          "$ref": "../split-schema/int32.json"
        },
        "left_border": {
          "$ref": "../split-schema/int32.json"
        },
        "border": {
          "$ref": "../split-schema/int32.json"
        },
        "stretch_monolith_image_to_size": {
          "$ref": "../split-schema/bool.json"
        },
        "left_tiling": {
          "$ref": "../split-schema/bool.json"
        },
        "right_tiling": {
          "$ref": "../split-schema/bool.json"
        },
        "top_tiling": {
          "$ref": "../split-schema/bool.json"
        },
        "bottom_tiling": {
          "$ref": "../split-schema/bool.json"
        },
        "center_tiling_vertical": {
          "$ref": "../split-schema/bool.json"
        },
        "center_tiling_horizontal": {
          "$ref": "../split-schema/bool.json"
        },
        "overall_tiling_horizontal_size": {
          "$ref": "../split-schema/uint16.json"
        },
        "overall_tiling_horizontal_spacing": {
          "$ref": "../split-schema/uint16.json"
        },
        "overall_tiling_horizontal_padding": {
          "$ref": "../split-schema/uint16.json"
        },
        "overall_tiling_vertical_size": {
          "$ref": "../split-schema/uint16.json"
        },
        "overall_tiling_vertical_spacing": {
          "$ref": "../split-schema/uint16.json"
        },
        "overall_tiling_vertical_padding": {
          "$ref": "../split-schema/uint16.json"
        },
        "custom_horizontal_tiling_sizes": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "../split-schema/uint32.json"
              }
            },
            {
              "type": "object",
              "additionalProperties": false
            }
          ]
        },
        "opacity": {
          "$ref": "../split-schema/double.json"
        },
        "background_blur": {
          "$ref": "../split-schema/bool.json"
        },
        "background_blur_sigma": {
          "$ref": "../split-schema/float.json"
        },
        "top_outer_border_shift": {
          "$ref": "../split-schema/int32.json"
        },
        "bottom_outer_border_shift": {
          "$ref": "../split-schema/int32.json"
        },
        "right_outer_border_shift": {
          "$ref": "../split-schema/int32.json"
        },
        "left_outer_border_shift": {
          "$ref": "../split-schema/int32.json"
        }
      }
    },
    {
      "$ref": "../split-schema/Sprite.json"
    }
  ]
}