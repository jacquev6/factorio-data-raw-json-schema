{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/ColumnAlignment.html",
  "type": "object",
  "properties": {
    "column": {
      "$ref": "../split-schema/uint32.json"
    },
    "alignment": {
      "anyOf": [
        {
          "type": "string",
          "const": "center"
        },
        {
          "type": "string",
          "const": "left"
        },
        {
          "type": "string",
          "const": "right"
        },
        {
          "type": "string",
          "const": "top-left"
        },
        {
          "type": "string",
          "const": "middle-left"
        },
        {
          "type": "string",
          "const": "bottom-left"
        },
        {
          "type": "string",
          "const": "top-center"
        },
        {
          "type": "string",
          "const": "middle-center"
        },
        {
          "type": "string",
          "const": "bottom-center"
        },
        {
          "type": "string",
          "const": "top-right"
        },
        {
          "type": "string",
          "const": "middle-right"
        },
        {
          "type": "string",
          "const": "bottom-right"
        }
      ]
    }
  },
  "required": [
    "column",
    "alignment"
  ]
}