{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/prototypes/ProduceAchievementPrototype.html",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "produce-achievement"
    },
    "name": {
      "$ref": "../split-schema/string.json"
    },
    "order": {
      "$ref": "../split-schema/Order.json"
    },
    "localised_name": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "localised_description": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "factoriopedia_description": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "subgroup": {
      "$ref": "../split-schema/ItemSubGroupID.json"
    },
    "hidden": {
      "$ref": "../split-schema/bool.json"
    },
    "hidden_in_factoriopedia": {
      "$ref": "../split-schema/bool.json"
    },
    "parameter": {
      "$ref": "../split-schema/bool.json"
    },
    "factoriopedia_simulation": {
      "$ref": "../split-schema/SimulationDefinition.json"
    },
    "factoriopedia_alternative": {
      "$ref": "../split-schema/string.json"
    },
    "icons": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/IconData.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "icon": {
      "$ref": "../split-schema/FileName.json"
    },
    "icon_size": {
      "$ref": "../split-schema/SpriteSizeType.json"
    },
    "steam_stats_name": {
      "$ref": "../split-schema/string.json"
    },
    "allowed_without_fight": {
      "$ref": "../split-schema/bool.json"
    },
    "amount": {
      "$ref": "../split-schema/MaterialAmountType.json"
    },
    "limited_to_one_game": {
      "$ref": "../split-schema/bool.json"
    },
    "item_product": {
      "$ref": "../split-schema/ItemIDFilter.json"
    },
    "fluid_product": {
      "$ref": "../split-schema/FluidID.json"
    }
  },
  "additionalProperties": false,
  "required": [
    "amount",
    "limited_to_one_game",
    "name",
    "type"
  ]
}