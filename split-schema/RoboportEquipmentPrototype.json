{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/prototypes/RoboportEquipmentPrototype.html",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "roboport-equipment"
    },
    "name": {
      "$ref": "../split-schema/string.json"
    },
    "order": {
      "$ref": "../split-schema/Order.json"
    },
    "localised_name": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "localised_description": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "factoriopedia_description": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "subgroup": {
      "$ref": "../split-schema/ItemSubGroupID.json"
    },
    "hidden": {
      "$ref": "../split-schema/bool.json"
    },
    "hidden_in_factoriopedia": {
      "$ref": "../split-schema/bool.json"
    },
    "parameter": {
      "$ref": "../split-schema/bool.json"
    },
    "factoriopedia_simulation": {
      "$ref": "../split-schema/SimulationDefinition.json"
    },
    "factoriopedia_alternative": {
      "$ref": "../split-schema/string.json"
    },
    "sprite": {
      "$ref": "../split-schema/Sprite.json"
    },
    "shape": {
      "$ref": "../split-schema/EquipmentShape.json"
    },
    "categories": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/EquipmentCategoryID.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "energy_source": {
      "$ref": "../split-schema/ElectricEnergySource.json"
    },
    "take_result": {
      "$ref": "../split-schema/ItemID.json"
    },
    "background_color": {
      "$ref": "../split-schema/Color.json"
    },
    "background_border_color": {
      "$ref": "../split-schema/Color.json"
    },
    "grabbed_background_color": {
      "$ref": "../split-schema/Color.json"
    },
    "recharging_animation": {
      "$ref": "../split-schema/Animation.json"
    },
    "spawn_and_station_height": {
      "$ref": "../split-schema/float.json"
    },
    "charge_approach_distance": {
      "$ref": "../split-schema/float.json"
    },
    "construction_radius": {
      "$ref": "../split-schema/float.json"
    },
    "charging_energy": {
      "$ref": "../split-schema/Energy.json"
    },
    "spawn_and_station_shadow_height_offset": {
      "$ref": "../split-schema/float.json"
    },
    "stationing_render_layer_swap_height": {
      "$ref": "../split-schema/float.json"
    },
    "draw_logistic_radius_visualization": {
      "$ref": "../split-schema/bool.json"
    },
    "draw_construction_radius_visualization": {
      "$ref": "../split-schema/bool.json"
    },
    "recharging_light": {
      "$ref": "../split-schema/LightDefinition.json"
    },
    "charging_station_count": {
      "$ref": "../split-schema/uint32.json"
    },
    "charging_station_count_affected_by_quality": {
      "$ref": "../split-schema/bool.json"
    },
    "charging_distance": {
      "$ref": "../split-schema/float.json"
    },
    "charging_station_shift": {
      "$ref": "../split-schema/Vector.json"
    },
    "charging_threshold_distance": {
      "$ref": "../split-schema/float.json"
    },
    "robot_vertical_acceleration": {
      "$ref": "../split-schema/float.json"
    },
    "stationing_offset": {
      "$ref": "../split-schema/Vector.json"
    },
    "robot_limit": {
      "$ref": "../split-schema/ItemCountType.json"
    },
    "robots_shrink_when_entering_and_exiting": {
      "$ref": "../split-schema/bool.json"
    },
    "charging_offsets": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/Vector.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "spawn_minimum": {
      "$ref": "../split-schema/Energy.json"
    },
    "burner": {
      "$ref": "../split-schema/BurnerEnergySource.json"
    },
    "power": {
      "$ref": "../split-schema/Energy.json"
    }
  },
  "additionalProperties": false,
  "required": [
    "categories",
    "charge_approach_distance",
    "charging_energy",
    "construction_radius",
    "energy_source",
    "name",
    "shape",
    "spawn_and_station_height",
    "sprite",
    "type"
  ]
}