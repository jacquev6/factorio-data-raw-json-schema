{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/CreateAsteroidChunkEffectItem.html",
  "allOf": [
    {
      "$ref": "../split-schema/TriggerEffectItem.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "create-asteroid-chunk"
        },
        "asteroid_name": {
          "$ref": "../split-schema/AsteroidChunkID.json"
        },
        "offset_deviation": {
          "$ref": "../split-schema/BoundingBox.json"
        },
        "offsets": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "../split-schema/Vector.json"
              }
            },
            {
              "type": "object",
              "additionalProperties": false
            }
          ]
        }
      },
      "required": [
        "type",
        "asteroid_name"
      ]
    }
  ]
}