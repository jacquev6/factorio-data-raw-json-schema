{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/BeaconGraphicsSet.html",
  "type": "object",
  "properties": {
    "draw_animation_when_idle": {
      "$ref": "../split-schema/bool.json"
    },
    "draw_light_when_idle": {
      "$ref": "../split-schema/bool.json"
    },
    "random_animation_offset": {
      "$ref": "../split-schema/bool.json"
    },
    "module_icons_suppressed": {
      "$ref": "../split-schema/bool.json"
    },
    "reset_animation_when_frozen": {
      "$ref": "../split-schema/bool.json"
    },
    "base_layer": {
      "$ref": "../split-schema/RenderLayer.json"
    },
    "animation_layer": {
      "$ref": "../split-schema/RenderLayer.json"
    },
    "top_layer": {
      "$ref": "../split-schema/RenderLayer.json"
    },
    "animation_progress": {
      "$ref": "../split-schema/float.json"
    },
    "apply_module_tint": {
      "$ref": "../split-schema/ModuleTint.json"
    },
    "no_modules_tint": {
      "$ref": "../split-schema/Color.json"
    },
    "animation_list": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/AnimationElement.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "frozen_patch": {
      "$ref": "../split-schema/Sprite.json"
    },
    "light": {
      "$ref": "../split-schema/LightDefinition.json"
    },
    "module_visualisations": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/BeaconModuleVisualizations.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "module_tint_mode": {
      "anyOf": [
        {
          "type": "string",
          "const": "single-module"
        },
        {
          "type": "string",
          "const": "mix"
        }
      ]
    }
  }
}