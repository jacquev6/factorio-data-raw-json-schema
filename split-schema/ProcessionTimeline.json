{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/ProcessionTimeline.html",
  "type": "object",
  "properties": {
    "duration": {
      "$ref": "../split-schema/MapTick.json"
    },
    "special_action_tick": {
      "$ref": "../split-schema/MapTick.json"
    },
    "draw_switch_tick": {
      "$ref": "../split-schema/MapTick.json"
    },
    "intermezzo_min_duration": {
      "$ref": "../split-schema/MapTick.json"
    },
    "intermezzo_max_duration": {
      "$ref": "../split-schema/MapTick.json"
    },
    "layers": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/ProcessionLayer.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "audio_events": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/ProcessionAudioEvent.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    }
  },
  "required": [
    "duration",
    "layers"
  ]
}