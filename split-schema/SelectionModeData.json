{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/SelectionModeData.html",
  "type": "object",
  "properties": {
    "border_color": {
      "$ref": "../split-schema/Color.json"
    },
    "count_button_color": {
      "$ref": "../split-schema/Color.json"
    },
    "chart_color": {
      "$ref": "../split-schema/Color.json"
    },
    "cursor_box_type": {
      "$ref": "../split-schema/CursorBoxType.json"
    },
    "mode": {
      "$ref": "../split-schema/SelectionModeFlags.json"
    },
    "entity_filters": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/EntityID.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "entity_type_filters": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/string.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "tile_filters": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/TileID.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "started_sound": {
      "$ref": "../split-schema/Sound.json"
    },
    "ended_sound": {
      "$ref": "../split-schema/Sound.json"
    },
    "play_ended_sound_when_nothing_selected": {
      "$ref": "../split-schema/bool.json"
    },
    "entity_filter_mode": {
      "anyOf": [
        {
          "type": "string",
          "const": "whitelist"
        },
        {
          "type": "string",
          "const": "blacklist"
        }
      ]
    },
    "tile_filter_mode": {
      "anyOf": [
        {
          "type": "string",
          "const": "whitelist"
        },
        {
          "type": "string",
          "const": "blacklist"
        }
      ]
    }
  },
  "required": [
    "border_color",
    "cursor_box_type",
    "mode"
  ]
}