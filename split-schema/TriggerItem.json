{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/TriggerItem.html",
  "type": "object",
  "properties": {
    "entity_flags": {
      "$ref": "../split-schema/EntityPrototypeFlags.json"
    },
    "collision_mask": {
      "$ref": "../split-schema/CollisionMaskConnector.json"
    },
    "ignore_collision_condition": {
      "$ref": "../split-schema/bool.json"
    },
    "trigger_target_mask": {
      "$ref": "../split-schema/TriggerTargetMask.json"
    },
    "repeat_count": {
      "$ref": "../split-schema/uint32.json"
    },
    "probability": {
      "$ref": "../split-schema/float.json"
    },
    "action_delivery": {
      "anyOf": [
        {
          "$ref": "../split-schema/TriggerDelivery.json"
        },
        {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "../split-schema/TriggerDelivery.json"
              }
            },
            {
              "type": "object",
              "additionalProperties": false
            }
          ]
        }
      ]
    },
    "force": {
      "$ref": "../split-schema/ForceCondition.json"
    }
  }
}