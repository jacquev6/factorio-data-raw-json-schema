{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/prototypes/ShortcutPrototype.html",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "shortcut"
    },
    "name": {
      "$ref": "../split-schema/string.json"
    },
    "order": {
      "$ref": "../split-schema/Order.json"
    },
    "localised_name": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "localised_description": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "factoriopedia_description": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "subgroup": {
      "$ref": "../split-schema/ItemSubGroupID.json"
    },
    "hidden": {
      "$ref": "../split-schema/bool.json"
    },
    "hidden_in_factoriopedia": {
      "$ref": "../split-schema/bool.json"
    },
    "parameter": {
      "$ref": "../split-schema/bool.json"
    },
    "factoriopedia_simulation": {
      "$ref": "../split-schema/SimulationDefinition.json"
    },
    "factoriopedia_alternative": {
      "$ref": "../split-schema/string.json"
    },
    "action": {
      "anyOf": [
        {
          "type": "string",
          "const": "toggle-alt-mode"
        },
        {
          "type": "string",
          "const": "undo"
        },
        {
          "type": "string",
          "const": "copy"
        },
        {
          "type": "string",
          "const": "cut"
        },
        {
          "type": "string",
          "const": "paste"
        },
        {
          "type": "string",
          "const": "import-string"
        },
        {
          "type": "string",
          "const": "toggle-personal-roboport"
        },
        {
          "type": "string",
          "const": "toggle-equipment-movement-bonus"
        },
        {
          "type": "string",
          "const": "spawn-item"
        },
        {
          "type": "string",
          "const": "lua"
        },
        {
          "type": "string",
          "const": "redo"
        }
      ]
    },
    "icons": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/IconData.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "icon": {
      "$ref": "../split-schema/FileName.json"
    },
    "icon_size": {
      "$ref": "../split-schema/SpriteSizeType.json"
    },
    "small_icons": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/IconData.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "small_icon": {
      "$ref": "../split-schema/FileName.json"
    },
    "small_icon_size": {
      "$ref": "../split-schema/SpriteSizeType.json"
    },
    "item_to_spawn": {
      "$ref": "../split-schema/ItemID.json"
    },
    "technology_to_unlock": {
      "$ref": "../split-schema/TechnologyID.json"
    },
    "unavailable_until_unlocked": {
      "$ref": "../split-schema/bool.json"
    },
    "toggleable": {
      "$ref": "../split-schema/bool.json"
    },
    "associated_control_input": {
      "$ref": "../split-schema/string.json"
    },
    "style": {
      "anyOf": [
        {
          "type": "string",
          "const": "default"
        },
        {
          "type": "string",
          "const": "blue"
        },
        {
          "type": "string",
          "const": "red"
        },
        {
          "type": "string",
          "const": "green"
        }
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "action",
    "name",
    "type"
  ]
}