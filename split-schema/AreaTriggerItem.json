{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/AreaTriggerItem.html",
  "allOf": [
    {
      "$ref": "../split-schema/TriggerItem.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "area"
        },
        "radius": {
          "$ref": "../split-schema/double.json"
        },
        "trigger_from_target": {
          "$ref": "../split-schema/bool.json"
        },
        "target_entities": {
          "$ref": "../split-schema/bool.json"
        },
        "target_enemies": {
          "$ref": "../split-schema/bool.json"
        },
        "show_in_tooltip": {
          "$ref": "../split-schema/bool.json"
        },
        "collision_mode": {
          "anyOf": [
            {
              "type": "string",
              "const": "distance-from-collision-box"
            },
            {
              "type": "string",
              "const": "distance-from-center"
            }
          ]
        }
      },
      "required": [
        "type",
        "radius"
      ]
    }
  ]
}