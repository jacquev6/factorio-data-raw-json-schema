{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/CraftingMachineGraphicsSet.html",
  "type": "object",
  "properties": {
    "animation": {
      "$ref": "../split-schema/Animation4Way.json"
    },
    "idle_animation": {
      "$ref": "../split-schema/Animation4Way.json"
    },
    "always_draw_idle_animation": {
      "$ref": "../split-schema/bool.json"
    },
    "default_recipe_tint": {
      "$ref": "../split-schema/GlobalRecipeTints.json"
    },
    "recipe_not_set_tint": {
      "$ref": "../split-schema/GlobalRecipeTints.json"
    },
    "states": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/VisualState.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "working_visualisations": {
      "anyOf": [
        {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "../split-schema/WorkingVisualisation.json"
              }
            },
            {
              "type": "object",
              "additionalProperties": false
            }
          ]
        },
        {
          "type": "object",
          "properties": {},
          "additionalProperties": {
            "$ref": "../split-schema/WorkingVisualisation.json"
          }
        }
      ]
    },
    "shift_animation_waypoints": {
      "$ref": "../split-schema/ShiftAnimationWaypoints.json"
    },
    "shift_animation_waypoint_stop_duration": {
      "$ref": "../split-schema/double.json"
    },
    "shift_animation_transition_duration": {
      "$ref": "../split-schema/uint16.json"
    },
    "status_colors": {
      "$ref": "../split-schema/StatusColors.json"
    },
    "frozen_patch": {
      "$ref": "../split-schema/Sprite4Way.json"
    },
    "circuit_connector_layer": {
      "anyOf": [
        {
          "$ref": "../split-schema/RenderLayer.json"
        },
        {
          "$ref": "../split-schema/CircuitConnectorLayer.json"
        }
      ]
    },
    "circuit_connector_secondary_draw_order": {
      "anyOf": [
        {
          "$ref": "../split-schema/int8.json"
        },
        {
          "$ref": "../split-schema/CircuitConnectorSecondaryDrawOrder.json"
        }
      ]
    },
    "animation_progress": {
      "$ref": "../split-schema/float.json"
    },
    "reset_animation_when_frozen": {
      "$ref": "../split-schema/bool.json"
    }
  }
}