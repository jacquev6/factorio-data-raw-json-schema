{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/ManualWireDragTipTrigger.html",
  "allOf": [
    {
      "$ref": "../split-schema/CountBasedTipTrigger.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "manual-wire-drag"
        },
        "source": {
          "$ref": "../split-schema/EntityID.json"
        },
        "target": {
          "$ref": "../split-schema/EntityID.json"
        },
        "match_type_only": {
          "$ref": "../split-schema/bool.json"
        },
        "wire_type": {
          "anyOf": [
            {
              "type": "string",
              "const": "red"
            },
            {
              "type": "string",
              "const": "green"
            },
            {
              "type": "string",
              "const": "copper"
            }
          ]
        }
      },
      "required": [
        "type"
      ]
    }
  ]
}