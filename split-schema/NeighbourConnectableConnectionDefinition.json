{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/NeighbourConnectableConnectionDefinition.html",
  "type": "object",
  "properties": {
    "location": {
      "type": "object",
      "properties": {
        "position": {
          "$ref": "../split-schema/MapPosition.json"
        },
        "direction": {
          "$ref": "../split-schema/uint8.json"
        }
      },
      "required": [
        "position",
        "direction"
      ]
    },
    "category": {
      "$ref": "../split-schema/NeighbourConnectableConnectionCategory.json"
    },
    "neighbour_category": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/NeighbourConnectableConnectionCategory.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    }
  },
  "required": [
    "location",
    "category"
  ]
}