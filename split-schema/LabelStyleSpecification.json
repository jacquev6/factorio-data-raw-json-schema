{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/LabelStyleSpecification.html",
  "allOf": [
    {
      "$ref": "../split-schema/BaseStyleSpecification.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "label_style"
        },
        "font": {
          "$ref": "../split-schema/string.json"
        },
        "font_color": {
          "$ref": "../split-schema/Color.json"
        },
        "hovered_font_color": {
          "$ref": "../split-schema/Color.json"
        },
        "game_controller_hovered_font_color": {
          "$ref": "../split-schema/Color.json"
        },
        "clicked_font_color": {
          "$ref": "../split-schema/Color.json"
        },
        "disabled_font_color": {
          "$ref": "../split-schema/Color.json"
        },
        "parent_hovered_font_color": {
          "$ref": "../split-schema/Color.json"
        },
        "rich_text_setting": {
          "$ref": "../split-schema/RichTextSetting.json"
        },
        "single_line": {
          "$ref": "../split-schema/bool.json"
        },
        "underlined": {
          "$ref": "../split-schema/bool.json"
        },
        "rich_text_highlight_error_color": {
          "$ref": "../split-schema/Color.json"
        },
        "rich_text_highlight_warning_color": {
          "$ref": "../split-schema/Color.json"
        },
        "rich_text_highlight_ok_color": {
          "$ref": "../split-schema/Color.json"
        }
      },
      "required": [
        "type"
      ]
    }
  ]
}