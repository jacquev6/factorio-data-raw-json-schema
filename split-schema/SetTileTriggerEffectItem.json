{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/SetTileTriggerEffectItem.html",
  "allOf": [
    {
      "$ref": "../split-schema/TriggerEffectItem.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "set-tile"
        },
        "tile_name": {
          "$ref": "../split-schema/TileID.json"
        },
        "radius": {
          "$ref": "../split-schema/float.json"
        },
        "apply_projection": {
          "$ref": "../split-schema/bool.json"
        },
        "apply_on_space_platform": {
          "$ref": "../split-schema/bool.json"
        },
        "tile_collision_mask": {
          "$ref": "../split-schema/CollisionMaskConnector.json"
        }
      },
      "required": [
        "type",
        "tile_name",
        "radius"
      ]
    }
  ]
}