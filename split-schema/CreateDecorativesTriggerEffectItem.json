{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/CreateDecorativesTriggerEffectItem.html",
  "type": "object",
  "properties": {
    "repeat_count": {
      "$ref": "../split-schema/double.json"
    },
    "repeat_count_deviation": {
      "$ref": "../split-schema/uint16.json"
    },
    "probability": {
      "$ref": "../split-schema/float.json"
    },
    "affects_target": {
      "$ref": "../split-schema/bool.json"
    },
    "show_in_tooltip": {
      "$ref": "../split-schema/bool.json"
    },
    "damage_type_filters": {
      "$ref": "../split-schema/DamageTypeFilters.json"
    },
    "type": {
      "type": "string",
      "const": "create-decorative"
    },
    "decorative": {
      "$ref": "../split-schema/DecorativeID.json"
    },
    "spawn_max": {
      "$ref": "../split-schema/uint16.json"
    },
    "spawn_min_radius": {
      "$ref": "../split-schema/float.json"
    },
    "spawn_max_radius": {
      "$ref": "../split-schema/float.json"
    },
    "spawn_min": {
      "$ref": "../split-schema/uint16.json"
    },
    "radius_curve": {
      "$ref": "../split-schema/float.json"
    },
    "apply_projection": {
      "$ref": "../split-schema/bool.json"
    },
    "spread_evenly": {
      "$ref": "../split-schema/bool.json"
    }
  },
  "required": [
    "decorative",
    "spawn_max",
    "spawn_min_radius",
    "spawn_max_radius"
  ]
}