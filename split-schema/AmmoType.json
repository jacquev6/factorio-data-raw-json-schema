{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/AmmoType.html",
  "type": "object",
  "properties": {
    "action": {
      "$ref": "../split-schema/Trigger.json"
    },
    "clamp_position": {
      "$ref": "../split-schema/bool.json"
    },
    "energy_consumption": {
      "$ref": "../split-schema/Energy.json"
    },
    "range_modifier": {
      "$ref": "../split-schema/double.json"
    },
    "cooldown_modifier": {
      "$ref": "../split-schema/double.json"
    },
    "consumption_modifier": {
      "$ref": "../split-schema/float.json"
    },
    "target_type": {
      "anyOf": [
        {
          "type": "string",
          "const": "entity"
        },
        {
          "type": "string",
          "const": "position"
        },
        {
          "type": "string",
          "const": "direction"
        }
      ]
    },
    "source_type": {
      "$ref": "../split-schema/AmmoSourceType.json"
    },
    "target_filter": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/EntityID.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    }
  }
}