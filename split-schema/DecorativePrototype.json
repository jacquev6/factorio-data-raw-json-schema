{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/prototypes/DecorativePrototype.html",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "optimized-decorative"
    },
    "name": {
      "$ref": "../split-schema/string.json"
    },
    "order": {
      "$ref": "../split-schema/Order.json"
    },
    "localised_name": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "localised_description": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "factoriopedia_description": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "subgroup": {
      "$ref": "../split-schema/ItemSubGroupID.json"
    },
    "hidden": {
      "$ref": "../split-schema/bool.json"
    },
    "hidden_in_factoriopedia": {
      "$ref": "../split-schema/bool.json"
    },
    "parameter": {
      "$ref": "../split-schema/bool.json"
    },
    "factoriopedia_simulation": {
      "$ref": "../split-schema/SimulationDefinition.json"
    },
    "factoriopedia_alternative": {
      "$ref": "../split-schema/string.json"
    },
    "pictures": {
      "$ref": "../split-schema/SpriteVariations.json"
    },
    "stateless_visualisation": {
      "$ref": "../split-schema/StatelessVisualisations.json"
    },
    "stateless_visualisation_variations": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/StatelessVisualisations.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "collision_box": {
      "$ref": "../split-schema/BoundingBox.json"
    },
    "render_layer": {
      "$ref": "../split-schema/RenderLayer.json"
    },
    "grows_through_rail_path": {
      "$ref": "../split-schema/bool.json"
    },
    "tile_layer": {
      "$ref": "../split-schema/int16.json"
    },
    "decal_overdraw_priority": {
      "$ref": "../split-schema/uint16.json"
    },
    "collision_mask": {
      "$ref": "../split-schema/CollisionMaskConnector.json"
    },
    "walking_sound": {
      "$ref": "../split-schema/Sound.json"
    },
    "trigger_effect": {
      "$ref": "../split-schema/TriggerEffect.json"
    },
    "minimal_separation": {
      "$ref": "../split-schema/double.json"
    },
    "target_count": {
      "$ref": "../split-schema/uint16.json"
    },
    "placed_effect": {
      "$ref": "../split-schema/TriggerEffect.json"
    },
    "autoplace": {
      "$ref": "../split-schema/AutoplaceSpecification.json"
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "pictures",
    "type"
  ]
}