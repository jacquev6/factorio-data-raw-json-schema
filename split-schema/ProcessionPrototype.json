{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/prototypes/ProcessionPrototype.html",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "procession"
    },
    "name": {
      "$ref": "../split-schema/string.json"
    },
    "order": {
      "$ref": "../split-schema/Order.json"
    },
    "localised_name": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "localised_description": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "factoriopedia_description": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "subgroup": {
      "$ref": "../split-schema/ItemSubGroupID.json"
    },
    "hidden": {
      "$ref": "../split-schema/bool.json"
    },
    "hidden_in_factoriopedia": {
      "$ref": "../split-schema/bool.json"
    },
    "parameter": {
      "$ref": "../split-schema/bool.json"
    },
    "factoriopedia_simulation": {
      "$ref": "../split-schema/SimulationDefinition.json"
    },
    "factoriopedia_alternative": {
      "$ref": "../split-schema/string.json"
    },
    "timeline": {
      "$ref": "../split-schema/ProcessionTimeline.json"
    },
    "ground_timeline": {
      "$ref": "../split-schema/ProcessionTimeline.json"
    },
    "usage": {
      "anyOf": [
        {
          "type": "string",
          "const": "departure"
        },
        {
          "type": "string",
          "const": "arrival"
        },
        {
          "type": "string",
          "const": "intermezzo"
        }
      ]
    },
    "procession_style": {
      "anyOf": [
        {
          "$ref": "../split-schema/uint32.json"
        },
        {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "../split-schema/uint32.json"
              }
            },
            {
              "type": "object",
              "additionalProperties": false
            }
          ]
        }
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "procession_style",
    "timeline",
    "type",
    "usage"
  ]
}