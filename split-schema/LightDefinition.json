{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/LightDefinition.html",
  "anyOf": [
    {
      "type": "object",
      "properties": {
        "type": {
          "anyOf": [
            {
              "type": "string",
              "const": "basic"
            },
            {
              "type": "string",
              "const": "oriented"
            }
          ]
        },
        "picture": {
          "$ref": "../split-schema/Sprite.json"
        },
        "rotation_shift": {
          "$ref": "../split-schema/RealOrientation.json"
        },
        "intensity": {
          "$ref": "../split-schema/float.json"
        },
        "size": {
          "$ref": "../split-schema/float.json"
        },
        "source_orientation_offset": {
          "$ref": "../split-schema/RealOrientation.json"
        },
        "add_perspective": {
          "$ref": "../split-schema/bool.json"
        },
        "flicker_interval": {
          "$ref": "../split-schema/uint8.json"
        },
        "flicker_min_modifier": {
          "$ref": "../split-schema/float.json"
        },
        "flicker_max_modifier": {
          "$ref": "../split-schema/float.json"
        },
        "offset_flicker": {
          "$ref": "../split-schema/bool.json"
        },
        "shift": {
          "$ref": "../split-schema/Vector.json"
        },
        "color": {
          "$ref": "../split-schema/Color.json"
        },
        "minimum_darkness": {
          "$ref": "../split-schema/float.json"
        }
      },
      "required": [
        "intensity",
        "size"
      ]
    },
    {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "anyOf": [
                  {
                    "type": "string",
                    "const": "basic"
                  },
                  {
                    "type": "string",
                    "const": "oriented"
                  }
                ]
              },
              "picture": {
                "$ref": "../split-schema/Sprite.json"
              },
              "rotation_shift": {
                "$ref": "../split-schema/RealOrientation.json"
              },
              "intensity": {
                "$ref": "../split-schema/float.json"
              },
              "size": {
                "$ref": "../split-schema/float.json"
              },
              "source_orientation_offset": {
                "$ref": "../split-schema/RealOrientation.json"
              },
              "add_perspective": {
                "$ref": "../split-schema/bool.json"
              },
              "flicker_interval": {
                "$ref": "../split-schema/uint8.json"
              },
              "flicker_min_modifier": {
                "$ref": "../split-schema/float.json"
              },
              "flicker_max_modifier": {
                "$ref": "../split-schema/float.json"
              },
              "offset_flicker": {
                "$ref": "../split-schema/bool.json"
              },
              "shift": {
                "$ref": "../split-schema/Vector.json"
              },
              "color": {
                "$ref": "../split-schema/Color.json"
              },
              "minimum_darkness": {
                "$ref": "../split-schema/float.json"
              }
            },
            "required": [
              "intensity",
              "size"
            ]
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    }
  ]
}