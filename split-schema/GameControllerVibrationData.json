{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/GameControllerVibrationData.html",
  "type": "object",
  "properties": {
    "low_frequency_vibration_intensity": {
      "$ref": "../split-schema/float.json"
    },
    "high_frequency_vibration_intensity": {
      "$ref": "../split-schema/float.json"
    },
    "duration": {
      "$ref": "../split-schema/uint32.json"
    },
    "play_for": {
      "anyOf": [
        {
          "type": "string",
          "const": "character_actions"
        },
        {
          "type": "string",
          "const": "everything"
        }
      ]
    }
  }
}