{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/ShootTipTrigger.html",
  "allOf": [
    {
      "$ref": "../split-schema/CountBasedTipTrigger.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "shoot"
        },
        "target": {
          "anyOf": [
            {
              "type": "string",
              "const": "enemy"
            },
            {
              "type": "string",
              "const": "entity"
            }
          ]
        }
      },
      "required": [
        "type"
      ]
    }
  ]
}