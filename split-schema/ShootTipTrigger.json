{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/ShootTipTrigger.html",
  "type": "object",
  "properties": {
    "count": {
      "$ref": "../split-schema/uint32.json"
    },
    "type": {
      "type": "string",
      "const": "shoot"
    },
    "target": {
      "anyOf": [
        {
          "type": "string",
          "const": "enemy"
        },
        {
          "type": "string",
          "const": "entity"
        }
      ]
    }
  },
  "required": [
    "type"
  ]
}