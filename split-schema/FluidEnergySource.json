{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/FluidEnergySource.html",
  "allOf": [
    {
      "$ref": "../split-schema/BaseEnergySource.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "fluid"
        },
        "fluid_box": {
          "$ref": "../split-schema/FluidBox.json"
        },
        "smoke": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "../split-schema/SmokeSource.json"
              }
            },
            {
              "type": "object",
              "additionalProperties": false
            }
          ]
        },
        "light_flicker": {
          "$ref": "../split-schema/LightFlickeringDefinition.json"
        },
        "effectivity": {
          "$ref": "../split-schema/double.json"
        },
        "burns_fluid": {
          "$ref": "../split-schema/bool.json"
        },
        "scale_fluid_usage": {
          "$ref": "../split-schema/bool.json"
        },
        "destroy_non_fuel_fluid": {
          "$ref": "../split-schema/bool.json"
        },
        "fluid_usage_per_tick": {
          "$ref": "../split-schema/FluidAmount.json"
        },
        "maximum_temperature": {
          "$ref": "../split-schema/float.json"
        }
      },
      "required": [
        "type",
        "fluid_box"
      ]
    }
  ]
}