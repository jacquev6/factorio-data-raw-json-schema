{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/TextBoxStyleSpecification.html",
  "allOf": [
    {
      "$ref": "../split-schema/BaseStyleSpecification.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "textbox_style"
        },
        "font": {
          "$ref": "../split-schema/string.json"
        },
        "font_color": {
          "$ref": "../split-schema/Color.json"
        },
        "disabled_font_color": {
          "$ref": "../split-schema/Color.json"
        },
        "selection_background_color": {
          "$ref": "../split-schema/Color.json"
        },
        "default_background": {
          "$ref": "../split-schema/ElementImageSet.json"
        },
        "active_background": {
          "$ref": "../split-schema/ElementImageSet.json"
        },
        "game_controller_hovered_background": {
          "$ref": "../split-schema/ElementImageSet.json"
        },
        "disabled_background": {
          "$ref": "../split-schema/ElementImageSet.json"
        },
        "rich_text_setting": {
          "$ref": "../split-schema/RichTextSetting.json"
        },
        "rich_text_highlight_error_color": {
          "$ref": "../split-schema/Color.json"
        },
        "rich_text_highlight_warning_color": {
          "$ref": "../split-schema/Color.json"
        },
        "rich_text_highlight_ok_color": {
          "$ref": "../split-schema/Color.json"
        },
        "selected_rich_text_highlight_error_color": {
          "$ref": "../split-schema/Color.json"
        },
        "selected_rich_text_highlight_warning_color": {
          "$ref": "../split-schema/Color.json"
        },
        "selected_rich_text_highlight_ok_color": {
          "$ref": "../split-schema/Color.json"
        }
      },
      "required": [
        "type"
      ]
    }
  ]
}