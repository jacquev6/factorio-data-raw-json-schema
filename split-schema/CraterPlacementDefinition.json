{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/CraterPlacementDefinition.html",
  "type": "object",
  "properties": {
    "minimum_segments_to_place": {
      "$ref": "../split-schema/uint32.json"
    },
    "segment_probability": {
      "$ref": "../split-schema/float.json"
    },
    "segments": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "orientation": {
                "$ref": "../split-schema/float.json"
              },
              "offset": {
                "$ref": "../split-schema/Vector.json"
              }
            },
            "required": [
              "orientation",
              "offset"
            ]
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    }
  },
  "required": [
    "segments"
  ]
}