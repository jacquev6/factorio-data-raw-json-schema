{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/TurretBaseVisualisation.html",
  "type": "object",
  "properties": {
    "render_layer": {
      "$ref": "../split-schema/RenderLayer.json"
    },
    "secondary_draw_order": {
      "$ref": "../split-schema/int8.json"
    },
    "enabled_states": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/TurretState.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "draw_when_has_energy": {
      "$ref": "../split-schema/bool.json"
    },
    "draw_when_no_energy": {
      "$ref": "../split-schema/bool.json"
    },
    "draw_when_has_ammo": {
      "$ref": "../split-schema/bool.json"
    },
    "draw_when_no_ammo": {
      "$ref": "../split-schema/bool.json"
    },
    "draw_when_frozen": {
      "$ref": "../split-schema/bool.json"
    },
    "draw_when_not_frozen": {
      "$ref": "../split-schema/bool.json"
    },
    "animation": {
      "$ref": "../split-schema/Animation4Way.json"
    }
  },
  "required": [
    "animation"
  ]
}