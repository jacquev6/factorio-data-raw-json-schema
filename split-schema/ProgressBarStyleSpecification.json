{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/ProgressBarStyleSpecification.html",
  "allOf": [
    {
      "$ref": "../split-schema/BaseStyleSpecification.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "progressbar_style"
        },
        "bar_width": {
          "$ref": "../split-schema/uint32.json"
        },
        "color": {
          "$ref": "../split-schema/Color.json"
        },
        "other_colors": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "less_than": {
                    "$ref": "../split-schema/double.json"
                  },
                  "color": {
                    "$ref": "../split-schema/Color.json"
                  },
                  "bar": {
                    "$ref": "../split-schema/ElementImageSet.json"
                  }
                },
                "required": [
                  "less_than"
                ]
              }
            },
            {
              "type": "object",
              "additionalProperties": false
            }
          ]
        },
        "bar": {
          "$ref": "../split-schema/ElementImageSet.json"
        },
        "bar_background": {
          "$ref": "../split-schema/ElementImageSet.json"
        },
        "font": {
          "$ref": "../split-schema/string.json"
        },
        "font_color": {
          "$ref": "../split-schema/Color.json"
        },
        "filled_font_color": {
          "$ref": "../split-schema/Color.json"
        },
        "embed_text_in_bar": {
          "$ref": "../split-schema/bool.json"
        },
        "side_text_padding": {
          "$ref": "../split-schema/int16.json"
        }
      },
      "required": [
        "type"
      ]
    }
  ]
}