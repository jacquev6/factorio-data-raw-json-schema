{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/prototypes/GodControllerPrototype.html",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "god-controller"
    },
    "name": {
      "$ref": "../split-schema/string.json"
    },
    "inventory_size": {
      "$ref": "../split-schema/ItemStackIndex.json"
    },
    "movement_speed": {
      "$ref": "../split-schema/double.json"
    },
    "item_pickup_distance": {
      "$ref": "../split-schema/double.json"
    },
    "loot_pickup_distance": {
      "$ref": "../split-schema/double.json"
    },
    "mining_speed": {
      "$ref": "../split-schema/double.json"
    },
    "crafting_categories": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/RecipeCategoryID.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "mining_categories": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/ResourceCategoryID.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "inventory_size",
    "item_pickup_distance",
    "loot_pickup_distance",
    "mining_speed",
    "movement_speed",
    "name",
    "type"
  ]
}