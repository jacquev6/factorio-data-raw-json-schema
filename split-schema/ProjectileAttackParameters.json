{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/ProjectileAttackParameters.html",
  "allOf": [
    {
      "$ref": "../split-schema/BaseAttackParameters.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "projectile"
        },
        "apply_projection_to_projectile_creation_position": {
          "$ref": "../split-schema/bool.json"
        },
        "projectile_center": {
          "$ref": "../split-schema/Vector.json"
        },
        "projectile_creation_distance": {
          "$ref": "../split-schema/float.json"
        },
        "shell_particle": {
          "$ref": "../split-schema/CircularParticleCreationSpecification.json"
        },
        "projectile_creation_parameters": {
          "$ref": "../split-schema/CircularProjectileCreationSpecification.json"
        },
        "projectile_orientation_offset": {
          "$ref": "../split-schema/RealOrientation.json"
        },
        "projectile_creation_offsets": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "../split-schema/Vector.json"
              }
            },
            {
              "type": "object",
              "additionalProperties": false
            }
          ]
        }
      },
      "required": [
        "type"
      ]
    }
  ]
}