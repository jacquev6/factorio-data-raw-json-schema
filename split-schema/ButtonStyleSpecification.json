{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/ButtonStyleSpecification.html",
  "allOf": [
    {
      "$ref": "../split-schema/StyleWithClickableGraphicalSetSpecification.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "button_style"
        },
        "font": {
          "$ref": "../split-schema/string.json"
        },
        "default_font_color": {
          "$ref": "../split-schema/Color.json"
        },
        "hovered_font_color": {
          "$ref": "../split-schema/Color.json"
        },
        "clicked_font_color": {
          "$ref": "../split-schema/Color.json"
        },
        "disabled_font_color": {
          "$ref": "../split-schema/Color.json"
        },
        "selected_font_color": {
          "$ref": "../split-schema/Color.json"
        },
        "selected_hovered_font_color": {
          "$ref": "../split-schema/Color.json"
        },
        "selected_clicked_font_color": {
          "$ref": "../split-schema/Color.json"
        },
        "strikethrough_color": {
          "$ref": "../split-schema/Color.json"
        },
        "pie_progress_color": {
          "$ref": "../split-schema/Color.json"
        },
        "clicked_vertical_offset": {
          "$ref": "../split-schema/uint32.json"
        },
        "draw_shadow_under_picture": {
          "$ref": "../split-schema/bool.json"
        },
        "draw_grayscale_picture": {
          "$ref": "../split-schema/bool.json"
        },
        "invert_colors_of_picture_when_hovered_or_toggled": {
          "$ref": "../split-schema/bool.json"
        },
        "invert_colors_of_picture_when_disabled": {
          "$ref": "../split-schema/bool.json"
        },
        "icon_horizontal_align": {
          "$ref": "../split-schema/HorizontalAlign.json"
        }
      },
      "required": [
        "type"
      ]
    }
  ]
}