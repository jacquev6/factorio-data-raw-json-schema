{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/CharacterItemPickupDistanceModifier.html",
  "type": "object",
  "properties": {
    "icons": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/IconData.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "icon": {
      "$ref": "../split-schema/FileName.json"
    },
    "icon_size": {
      "$ref": "../split-schema/SpriteSizeType.json"
    },
    "hidden": {
      "$ref": "../split-schema/bool.json"
    },
    "modifier": {
      "$ref": "../split-schema/double.json"
    },
    "type": {
      "type": "string",
      "const": "character-item-pickup-distance"
    },
    "use_icon_overlay_constant": {
      "$ref": "../split-schema/bool.json"
    }
  },
  "required": [
    "modifier",
    "type"
  ]
}