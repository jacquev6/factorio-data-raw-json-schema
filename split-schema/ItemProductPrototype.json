{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/ItemProductPrototype.html",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "item"
    },
    "name": {
      "$ref": "../split-schema/ItemID.json"
    },
    "amount": {
      "$ref": "../split-schema/double.json"
    },
    "amount_min": {
      "$ref": "../split-schema/uint16.json"
    },
    "amount_max": {
      "$ref": "../split-schema/uint16.json"
    },
    "probability": {
      "$ref": "../split-schema/double.json"
    },
    "ignored_by_stats": {
      "$ref": "../split-schema/uint16.json"
    },
    "ignored_by_productivity": {
      "$ref": "../split-schema/uint16.json"
    },
    "show_details_in_recipe_tooltip": {
      "$ref": "../split-schema/bool.json"
    },
    "extra_count_fraction": {
      "$ref": "../split-schema/float.json"
    },
    "percent_spoiled": {
      "$ref": "../split-schema/float.json"
    }
  },
  "required": [
    "type",
    "name"
  ]
}