{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/AnimationSheet.html",
  "allOf": [
    {
      "$ref": "../split-schema/AnimationParameters.json"
    },
    {
      "type": "object",
      "properties": {
        "variation_count": {
          "$ref": "../split-schema/uint32.json"
        },
        "filenames": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "../split-schema/FileName.json"
              }
            },
            {
              "type": "object",
              "additionalProperties": false
            }
          ]
        },
        "lines_per_file": {
          "$ref": "../split-schema/uint32.json"
        }
      },
      "required": [
        "variation_count"
      ]
    }
  ]
}