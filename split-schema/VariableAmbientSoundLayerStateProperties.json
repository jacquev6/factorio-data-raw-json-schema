{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/VariableAmbientSoundLayerStateProperties.html",
  "type": "object",
  "properties": {
    "enabled": {
      "$ref": "../split-schema/bool.json"
    },
    "variant": {
      "$ref": "../split-schema/uint8.json"
    },
    "sequence_length": {
      "$ref": "../split-schema/RandomRange.json"
    },
    "number_of_repetitions": {
      "anyOf": [
        {
          "$ref": "../split-schema/RandomRange.json"
        },
        {
          "$ref": "../split-schema/ProbabilityTable.json"
        }
      ]
    },
    "start_pause": {
      "$ref": "../split-schema/RandomRange.json"
    },
    "pause_between_samples": {
      "$ref": "../split-schema/RandomRange.json"
    },
    "pause_between_repetitions": {
      "$ref": "../split-schema/RandomRange.json"
    },
    "end_pause": {
      "$ref": "../split-schema/RandomRange.json"
    },
    "silence_instead_of_sample_probability": {
      "$ref": "../split-schema/float.json"
    }
  }
}