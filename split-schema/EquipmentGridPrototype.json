{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/prototypes/EquipmentGridPrototype.html",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "equipment-grid"
    },
    "name": {
      "$ref": "../split-schema/string.json"
    },
    "order": {
      "$ref": "../split-schema/Order.json"
    },
    "localised_name": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "localised_description": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "factoriopedia_description": {
      "$ref": "../split-schema/LocalisedString.json"
    },
    "subgroup": {
      "$ref": "../split-schema/ItemSubGroupID.json"
    },
    "hidden": {
      "$ref": "../split-schema/bool.json"
    },
    "hidden_in_factoriopedia": {
      "$ref": "../split-schema/bool.json"
    },
    "parameter": {
      "$ref": "../split-schema/bool.json"
    },
    "factoriopedia_simulation": {
      "$ref": "../split-schema/SimulationDefinition.json"
    },
    "factoriopedia_alternative": {
      "$ref": "../split-schema/string.json"
    },
    "equipment_categories": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/EquipmentCategoryID.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "width": {
      "$ref": "../split-schema/uint32.json"
    },
    "height": {
      "$ref": "../split-schema/uint32.json"
    },
    "locked": {
      "$ref": "../split-schema/bool.json"
    }
  },
  "additionalProperties": false,
  "required": [
    "type",
    "name",
    "equipment_categories",
    "width",
    "height"
  ]
}