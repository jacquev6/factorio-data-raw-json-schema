{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/PlaySoundTriggerEffectItem.html",
  "type": "object",
  "properties": {
    "repeat_count": {
      "$ref": "../split-schema/double.json"
    },
    "repeat_count_deviation": {
      "$ref": "../split-schema/uint16.json"
    },
    "probability": {
      "$ref": "../split-schema/float.json"
    },
    "affects_target": {
      "$ref": "../split-schema/bool.json"
    },
    "show_in_tooltip": {
      "$ref": "../split-schema/bool.json"
    },
    "damage_type_filters": {
      "$ref": "../split-schema/DamageTypeFilters.json"
    },
    "type": {
      "type": "string",
      "const": "play-sound"
    },
    "sound": {
      "$ref": "../split-schema/Sound.json"
    },
    "min_distance": {
      "$ref": "../split-schema/float.json"
    },
    "max_distance": {
      "$ref": "../split-schema/float.json"
    },
    "volume_modifier": {
      "$ref": "../split-schema/float.json"
    },
    "audible_distance_modifier": {
      "$ref": "../split-schema/float.json"
    },
    "play_on_target_position": {
      "$ref": "../split-schema/bool.json"
    }
  },
  "required": [
    "type",
    "sound"
  ]
}