{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/LightningProperties.html",
  "type": "object",
  "properties": {
    "lightnings_per_chunk_per_tick": {
      "$ref": "../split-schema/double.json"
    },
    "search_radius": {
      "$ref": "../split-schema/double.json"
    },
    "lightning_types": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/EntityID.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "priority_rules": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/LightningPriorityRule.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "exemption_rules": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/LightningRuleBase.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    }
  },
  "required": [
    "lightnings_per_chunk_per_tick",
    "search_radius",
    "lightning_types",
    "priority_rules",
    "exemption_rules"
  ]
}