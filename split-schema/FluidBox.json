{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/FluidBox.html",
  "type": "object",
  "properties": {
    "volume": {
      "$ref": "../split-schema/FluidAmount.json"
    },
    "pipe_connections": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/PipeConnectionDefinition.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "filter": {
      "$ref": "../split-schema/FluidID.json"
    },
    "render_layer": {
      "$ref": "../split-schema/RenderLayer.json"
    },
    "draw_only_when_connected": {
      "$ref": "../split-schema/bool.json"
    },
    "hide_connection_info": {
      "$ref": "../split-schema/bool.json"
    },
    "pipe_covers": {
      "$ref": "../split-schema/Sprite4Way.json"
    },
    "pipe_covers_frozen": {
      "$ref": "../split-schema/Sprite4Way.json"
    },
    "pipe_picture": {
      "$ref": "../split-schema/Sprite4Way.json"
    },
    "pipe_picture_frozen": {
      "$ref": "../split-schema/Sprite4Way.json"
    },
    "mirrored_pipe_picture": {
      "$ref": "../split-schema/Sprite4Way.json"
    },
    "mirrored_pipe_picture_frozen": {
      "$ref": "../split-schema/Sprite4Way.json"
    },
    "minimum_temperature": {
      "$ref": "../split-schema/float.json"
    },
    "maximum_temperature": {
      "$ref": "../split-schema/float.json"
    },
    "max_pipeline_extent": {
      "$ref": "../split-schema/uint32.json"
    },
    "production_type": {
      "anyOf": [
        {
          "type": "string",
          "const": "none"
        },
        {
          "type": "string",
          "const": "input"
        },
        {
          "type": "string",
          "const": "input-output"
        },
        {
          "type": "string",
          "const": "output"
        }
      ]
    },
    "secondary_draw_order": {
      "$ref": "../split-schema/int8.json"
    },
    "secondary_draw_orders": {
      "type": "object",
      "properties": {
        "north": {
          "$ref": "../split-schema/int8.json"
        },
        "east": {
          "$ref": "../split-schema/int8.json"
        },
        "south": {
          "$ref": "../split-schema/int8.json"
        },
        "west": {
          "$ref": "../split-schema/int8.json"
        }
      }
    },
    "always_draw_covers": {
      "$ref": "../split-schema/bool.json"
    },
    "enable_working_visualisations": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/string.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    }
  },
  "required": [
    "volume",
    "pipe_connections"
  ]
}