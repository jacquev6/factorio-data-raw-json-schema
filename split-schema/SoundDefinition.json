{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/SoundDefinition.html",
  "anyOf": [
    {
      "type": "object",
      "properties": {
        "filename": {
          "$ref": "../split-schema/FileName.json"
        },
        "volume": {
          "$ref": "../split-schema/float.json"
        },
        "min_volume": {
          "$ref": "../split-schema/float.json"
        },
        "max_volume": {
          "$ref": "../split-schema/float.json"
        },
        "preload": {
          "$ref": "../split-schema/bool.json"
        },
        "speed": {
          "$ref": "../split-schema/float.json"
        },
        "min_speed": {
          "$ref": "../split-schema/float.json"
        },
        "max_speed": {
          "$ref": "../split-schema/float.json"
        },
        "modifiers": {
          "anyOf": [
            {
              "$ref": "../split-schema/SoundModifier.json"
            },
            {
              "oneOf": [
                {
                  "type": "array",
                  "items": {
                    "$ref": "../split-schema/SoundModifier.json"
                  }
                },
                {
                  "type": "object",
                  "additionalProperties": false
                }
              ]
            }
          ]
        }
      },
      "required": [
        "filename"
      ]
    },
    {
      "$ref": "../split-schema/FileName.json"
    }
  ]
}