{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/StreamAttackParameters.html",
  "type": "object",
  "properties": {
    "range": {
      "$ref": "../split-schema/float.json"
    },
    "cooldown": {
      "$ref": "../split-schema/float.json"
    },
    "min_range": {
      "$ref": "../split-schema/float.json"
    },
    "turn_range": {
      "$ref": "../split-schema/float.json"
    },
    "fire_penalty": {
      "$ref": "../split-schema/float.json"
    },
    "rotate_penalty": {
      "$ref": "../split-schema/float.json"
    },
    "health_penalty": {
      "$ref": "../split-schema/float.json"
    },
    "range_mode": {
      "$ref": "../split-schema/RangeMode.json"
    },
    "min_attack_distance": {
      "$ref": "../split-schema/float.json"
    },
    "damage_modifier": {
      "$ref": "../split-schema/float.json"
    },
    "ammo_consumption_modifier": {
      "$ref": "../split-schema/float.json"
    },
    "cooldown_deviation": {
      "$ref": "../split-schema/float.json"
    },
    "warmup": {
      "$ref": "../split-schema/uint32.json"
    },
    "lead_target_for_projectile_speed": {
      "$ref": "../split-schema/float.json"
    },
    "lead_target_for_projectile_delay": {
      "$ref": "../split-schema/double.json"
    },
    "movement_slow_down_cooldown": {
      "$ref": "../split-schema/float.json"
    },
    "movement_slow_down_factor": {
      "$ref": "../split-schema/double.json"
    },
    "ammo_type": {
      "$ref": "../split-schema/AmmoType.json"
    },
    "activation_type": {
      "anyOf": [
        {
          "type": "string",
          "const": "shoot"
        },
        {
          "type": "string",
          "const": "throw"
        },
        {
          "type": "string",
          "const": "consume"
        },
        {
          "type": "string",
          "const": "activate"
        }
      ]
    },
    "sound": {
      "$ref": "../split-schema/LayeredSound.json"
    },
    "animation": {
      "$ref": "../split-schema/RotatedAnimation.json"
    },
    "cyclic_sound": {
      "$ref": "../split-schema/CyclicSound.json"
    },
    "use_shooter_direction": {
      "$ref": "../split-schema/bool.json"
    },
    "ammo_categories": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/AmmoCategoryID.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "ammo_category": {
      "$ref": "../split-schema/AmmoCategoryID.json"
    },
    "type": {
      "type": "string",
      "const": "stream"
    },
    "fluid_consumption": {
      "$ref": "../split-schema/FluidAmount.json"
    },
    "gun_barrel_length": {
      "$ref": "../split-schema/float.json"
    },
    "projectile_creation_parameters": {
      "$ref": "../split-schema/CircularProjectileCreationSpecification.json"
    },
    "gun_center_shift": {
      "anyOf": [
        {
          "$ref": "../split-schema/Vector.json"
        },
        {
          "type": "object",
          "properties": {
            "north": {
              "$ref": "../split-schema/Vector.json"
            },
            "east": {
              "$ref": "../split-schema/Vector.json"
            },
            "south": {
              "$ref": "../split-schema/Vector.json"
            },
            "west": {
              "$ref": "../split-schema/Vector.json"
            }
          },
          "required": [
            "north"
          ]
        }
      ]
    },
    "fluids": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "$ref": "../split-schema/FluidID.json"
              },
              "damage_modifier": {
                "$ref": "../split-schema/double.json"
              }
            },
            "required": [
              "type"
            ]
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    }
  },
  "required": [
    "range",
    "cooldown",
    "type"
  ]
}