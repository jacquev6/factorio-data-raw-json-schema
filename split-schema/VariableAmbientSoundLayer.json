{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/VariableAmbientSoundLayer.html",
  "type": "object",
  "properties": {
    "name": {
      "$ref": "../split-schema/string.json"
    },
    "variants": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/Sound.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "composition_mode": {
      "$ref": "../split-schema/VariableAmbientSoundCompositionMode.json"
    },
    "control_layer": {
      "$ref": "../split-schema/string.json"
    },
    "control_layer_sample_mapping": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "array",
                "items": {
                  "$ref": "../split-schema/uint8.json"
                }
              },
              {
                "type": "object",
                "additionalProperties": false
              }
            ]
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "has_start_sample": {
      "$ref": "../split-schema/bool.json"
    },
    "has_end_sample": {
      "$ref": "../split-schema/bool.json"
    },
    "number_of_sublayers": {
      "$ref": "../split-schema/uint8.json"
    },
    "sublayer_starting_offset": {
      "anyOf": [
        {
          "$ref": "../split-schema/RandomRange.json"
        },
        {
          "$ref": "../split-schema/ProbabilityTable.json"
        }
      ]
    },
    "sublayer_offset": {
      "anyOf": [
        {
          "$ref": "../split-schema/RandomRange.json"
        },
        {
          "$ref": "../split-schema/ProbabilityTable.json"
        }
      ]
    },
    "sample_length": {
      "$ref": "../split-schema/RandomRange.json"
    }
  },
  "required": [
    "name",
    "variants",
    "composition_mode"
  ]
}