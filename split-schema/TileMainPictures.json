{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/TileMainPictures.html",
  "allOf": [
    {
      "$ref": "../split-schema/TileSpriteLayout.json"
    },
    {
      "type": "object",
      "properties": {
        "size": {
          "$ref": "../split-schema/uint32.json"
        },
        "probability": {
          "$ref": "../split-schema/double.json"
        },
        "weights": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "../split-schema/double.json"
              }
            },
            {
              "type": "object",
              "additionalProperties": false
            }
          ]
        }
      },
      "required": [
        "size"
      ]
    }
  ]
}