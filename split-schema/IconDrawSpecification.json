{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/IconDrawSpecification.html",
  "type": "object",
  "properties": {
    "shift": {
      "$ref": "../split-schema/Vector.json"
    },
    "scale": {
      "$ref": "../split-schema/float.json"
    },
    "scale_for_many": {
      "$ref": "../split-schema/float.json"
    },
    "renderLayer": {
      "anyOf": [
        {
          "type": "string",
          "const": "entity-info-icon-below"
        },
        {
          "type": "string",
          "const": "entity-info-icon-above"
        },
        {
          "type": "string",
          "const": "air-entity-info-icon"
        }
      ]
    }
  }
}