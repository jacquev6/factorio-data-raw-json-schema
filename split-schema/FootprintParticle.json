{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/FootprintParticle.html",
  "type": "object",
  "properties": {
    "tiles": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/TileID.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "particle_name": {
      "$ref": "../split-schema/ParticleID.json"
    },
    "use_as_default": {
      "$ref": "../split-schema/bool.json"
    }
  },
  "required": [
    "tiles"
  ]
}