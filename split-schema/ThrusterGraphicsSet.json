{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/ThrusterGraphicsSet.html",
  "type": "object",
  "properties": {
    "animation": {
      "$ref": "../split-schema/Animation4Way.json"
    },
    "idle_animation": {
      "$ref": "../split-schema/Animation4Way.json"
    },
    "always_draw_idle_animation": {
      "$ref": "../split-schema/bool.json"
    },
    "default_recipe_tint": {
      "$ref": "../split-schema/GlobalRecipeTints.json"
    },
    "recipe_not_set_tint": {
      "$ref": "../split-schema/GlobalRecipeTints.json"
    },
    "states": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/VisualState.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "working_visualisations": {
      "anyOf": [
        {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "../split-schema/WorkingVisualisation.json"
              }
            },
            {
              "type": "object",
              "additionalProperties": false
            }
          ]
        },
        {
          "type": "object",
          "properties": {},
          "additionalProperties": {
            "$ref": "../split-schema/WorkingVisualisation.json"
          }
        }
      ]
    },
    "shift_animation_waypoints": {
      "$ref": "../split-schema/ShiftAnimationWaypoints.json"
    },
    "shift_animation_waypoint_stop_duration": {
      "$ref": "../split-schema/double.json"
    },
    "shift_animation_transition_duration": {
      "$ref": "../split-schema/uint16.json"
    },
    "status_colors": {
      "$ref": "../split-schema/StatusColors.json"
    },
    "flame": {
      "$ref": "../split-schema/Sprite.json"
    },
    "flame_effect": {
      "$ref": "../split-schema/EffectTexture.json"
    },
    "flame_position": {
      "$ref": "../split-schema/Vector.json"
    },
    "flame_effect_height": {
      "$ref": "../split-schema/float.json"
    },
    "flame_effect_width": {
      "$ref": "../split-schema/float.json"
    },
    "flame_half_height": {
      "$ref": "../split-schema/float.json"
    },
    "flame_effect_offset": {
      "$ref": "../split-schema/float.json"
    }
  }
}