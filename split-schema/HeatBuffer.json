{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/HeatBuffer.html",
  "type": "object",
  "properties": {
    "max_temperature": {
      "$ref": "../split-schema/double.json"
    },
    "specific_heat": {
      "$ref": "../split-schema/Energy.json"
    },
    "max_transfer": {
      "$ref": "../split-schema/Energy.json"
    },
    "default_temperature": {
      "$ref": "../split-schema/double.json"
    },
    "min_temperature_gradient": {
      "$ref": "../split-schema/double.json"
    },
    "min_working_temperature": {
      "$ref": "../split-schema/double.json"
    },
    "minimum_glow_temperature": {
      "$ref": "../split-schema/float.json"
    },
    "pipe_covers": {
      "$ref": "../split-schema/Sprite4Way.json"
    },
    "heat_pipe_covers": {
      "$ref": "../split-schema/Sprite4Way.json"
    },
    "heat_picture": {
      "$ref": "../split-schema/Sprite4Way.json"
    },
    "heat_glow": {
      "$ref": "../split-schema/Sprite4Way.json"
    },
    "connections": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/HeatConnection.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    }
  },
  "required": [
    "max_temperature",
    "specific_heat",
    "max_transfer"
  ]
}