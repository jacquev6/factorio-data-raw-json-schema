{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/AggregationSpecification.html",
  "type": "object",
  "properties": {
    "max_count": {
      "$ref": "../split-schema/uint32.json"
    },
    "progress_threshold": {
      "$ref": "../split-schema/float.json"
    },
    "volume_reduction_rate": {
      "$ref": "../split-schema/float.json"
    },
    "remove": {
      "$ref": "../split-schema/bool.json"
    },
    "count_already_playing": {
      "$ref": "../split-schema/bool.json"
    },
    "priority": {
      "anyOf": [
        {
          "type": "string",
          "const": "closest"
        },
        {
          "type": "string",
          "const": "farthest"
        },
        {
          "type": "string",
          "const": "newest"
        },
        {
          "type": "string",
          "const": "oldest"
        }
      ]
    }
  },
  "required": [
    "max_count",
    "remove"
  ]
}