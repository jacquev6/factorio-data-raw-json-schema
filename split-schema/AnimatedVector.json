{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/AnimatedVector.html",
  "type": "object",
  "properties": {
    "rotations": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "frames": {
                "oneOf": [
                  {
                    "type": "array",
                    "items": {
                      "$ref": "../split-schema/Vector.json"
                    }
                  },
                  {
                    "type": "object",
                    "additionalProperties": false
                  }
                ]
              },
              "render_layer": {
                "$ref": "../split-schema/RenderLayer.json"
              }
            },
            "required": [
              "frames"
            ]
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "render_layer": {
      "$ref": "../split-schema/RenderLayer.json"
    },
    "direction_shift": {
      "type": "object",
      "properties": {
        "north": {
          "$ref": "../split-schema/Vector.json"
        },
        "east": {
          "$ref": "../split-schema/Vector.json"
        },
        "south": {
          "$ref": "../split-schema/Vector.json"
        },
        "west": {
          "$ref": "../split-schema/Vector.json"
        }
      }
    }
  },
  "required": [
    "rotations"
  ]
}