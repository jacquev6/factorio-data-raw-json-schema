{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "description": "https://lua-api.factorio.com/stable/types/CreateTrivialSmokeEffectItem.html",
  "type": "object",
  "properties": {
    "repeat_count": {
      "$ref": "../split-schema/uint16.json"
    },
    "repeat_count_deviation": {
      "$ref": "../split-schema/uint16.json"
    },
    "probability": {
      "$ref": "../split-schema/float.json"
    },
    "affects_target": {
      "$ref": "../split-schema/bool.json"
    },
    "show_in_tooltip": {
      "$ref": "../split-schema/bool.json"
    },
    "damage_type_filters": {
      "$ref": "../split-schema/DamageTypeFilters.json"
    },
    "type": {
      "type": "string",
      "const": "create-trivial-smoke"
    },
    "smoke_name": {
      "$ref": "../split-schema/TrivialSmokeID.json"
    },
    "offset_deviation": {
      "$ref": "../split-schema/BoundingBox.json"
    },
    "offsets": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "../split-schema/Vector.json"
          }
        },
        {
          "type": "object",
          "additionalProperties": false
        }
      ]
    },
    "initial_height": {
      "$ref": "../split-schema/float.json"
    },
    "max_radius": {
      "$ref": "../split-schema/float.json"
    },
    "speed": {
      "$ref": "../split-schema/Vector.json"
    },
    "speed_multiplier": {
      "$ref": "../split-schema/float.json"
    },
    "speed_multiplier_deviation": {
      "$ref": "../split-schema/float.json"
    },
    "starting_frame": {
      "$ref": "../split-schema/float.json"
    },
    "starting_frame_deviation": {
      "$ref": "../split-schema/float.json"
    },
    "speed_from_center": {
      "$ref": "../split-schema/float.json"
    },
    "speed_from_center_deviation": {
      "$ref": "../split-schema/float.json"
    }
  },
  "required": [
    "type",
    "smoke_name"
  ]
}